<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorButtonDark" />
            <stroke android:width="1dp" android:color="@color/colorButtonDark" />
            <corners android:radius="30dp" />
            <padding android:bottom="0dp" android:left="32dp" android:right="32dp" android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorButton" android:startColor="@color/colorButton" />
            <stroke android:width="1dp" android:color="@color/colorButton" />
            <corners android:radius="30dp" />
            <padding android:bottom="0dp" android:left="32dp" android:right="32dp" android:top="0dp" />
        </shape>
    </item>
</selector>